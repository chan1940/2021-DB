<h1>{{title1}}</h1>
<div>
<table>
    <tr>
        <td>Airport_code</td>
        <td>Name</td>
        <td>City</td>
        <td>State</td>
        <td>Number_of_employee</td>
        {{!-- 열마다 위의 값을 넣어준다. --}}
    </tr>
    {{!-- 데이터가 입력될때마다 반복수행되는 부분 --}}
    {{#each AIRPORT}}
    <form method="post">
        <tr>
            <td>{{Airport_code}}</td>
            <td>{{Name}}</td>
            <td>{{City}}</td>
            <td>{{State}}</td>
            <td>{{Number_of_employee}}</td>

            <td style="border: none; margin-left: 10px;">
                <button 
                 style="margin-left: 10px;" 
                 name='delBtn1' 
                 type="submit" 
                 value="{{Airport_code}}" 
                 formaction="/delete"
                >
                삭제
                </button>
            </td>
        </tr>
    </form>
 {{/each}}
</table>
</div>

